.wrapper
  = render 'messages/side'

  .main
    .main-header 
      .current-group
        %p.current-group__name sample
        %p.member-list Member : aaa bbb
      .edit-header
        = link_to edit_group_path(current_user) do
          .edit-header__btn Edit
    .messages 
      .message
        .info
          %p.info__user-name  aaa
          %p.info__date 2019/5/1(Wed) 09:00:00
        %p.message-text hello
      .message
        .info
          %p.info__user-name  bbb
          %p.info__date 2019/5/1(Wed) 09:03:00
        %p.message-text hi

    .form 
      = form_for [@group, @message], class: 'new-message' do |f|
        .input-box
          = f.text_field :body, class: 'form__text', placeholder: 'type a message'
          = f.label :image, class: 'image-label' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'form__image'
        = f.submit 'Send', class: 'form__submit-btn'
